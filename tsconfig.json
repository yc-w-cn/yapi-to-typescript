{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "pretty": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "useUnknownInCatchVariables": false
  },
  "include": ["src"],
  "awesomeTypescriptLoaderOptions": {
    // 加速编译
    "useBabel": true
  }
}
